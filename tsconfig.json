{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@nuxt/types",
      "@nuxtjs/axios",
      "@types/node",
      "@nuxt/vue-app",
      "@nuxtjs/vuetify",
      "@nuxtjs/auth-next",
      "@nuxt/image",
      "@nuxtjs/sentry",
      "nuxt-webpack-optimisations",
      "@nuxtjs/dayjs",
      "dayjs/plugin/relativeTime"
    ],
    "typeRoots": ["./types"]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
